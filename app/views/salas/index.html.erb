<p id="notice"><%= notice %></p>

<div class="icons-menu">
	<%= link_to image_tag("icons/home2.png"), {controller:"welcome"}, {:class => "icon"}%>
	<%= link_to image_tag("icons/new.png"), new_sala_path, {:class => "icon"}%>
</div>

<h1>Salas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Numero</th>
      <th>Limite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.nome %></td>
        <td><%= sala.numero %></td>
        <td><%= sala.limite %></td>
		<td><%= link_to image_tag("icons/show.png"), sala, {:class => "icon"}%></td>	
      </tr>
    <% end %>
  </tbody>
</table>
<br>
