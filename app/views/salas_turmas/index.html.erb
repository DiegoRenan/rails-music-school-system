<p id="notice">
	<%= notice %>
</p>

<h1>Salas X Turmas</h1>

<table>
	<thead>
		<tr>
			<th>Sala</th>
			<th>Turma</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% s_array = Sala.all.map { |s| [s.nome, s.id] } %>
		<% t_array = Turma.all.map { |t| [t.nome, t.id] } %>
		<% @salas_turmas.each do |salas_turma| %>
		<tr>
			<% s_array.each do |r|%>
				<% if r[1] == salas_turma.salas_id %>
					<td><%= r[0] %></td>
				<%end%>
			<%end%>
			
			<% t_array.each do |d|%>
				<% if d[1] == salas_turma.turmas_id %>
					<td><%= d[0] %></td>
				<%end%>
			<%end%>
			<td><%= salas_turma.status %></td>
			<td><%= link_to 'Mostrar', salas_turma %></td>
			<td><%= link_to 'Editar', edit_salas_turma_path(salas_turma) %></td>
			<td><%= link_to 'Deletar', salas_turma, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

