 <div class="panel panel-default" >
	<div class="panel-body">
		<%= form_for(@matricula) do |f| %>
		<% if @matricula.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@matricula.errors.count, "error") %> prohibited this matricula from being saved:</h2>

			<ul>
				<% @matricula.errors.full_messages.each do |message| %>
				<li>
					<%= message %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="form-group">
			<div class="field">
				<strong>CÃ³digo: </strong><%= @codigo_matricula %>
			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :aluno_id %>
				<br>
				<% c_array = Aluno.all.map { |c| [c.nome, c.id] } %>
				<%= f.select(:aluno_id, options_for_select(c_array),{prompt: 'Selecione Aluno: '}, {class: "form-control"} ) %>
			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :turma_id %>
				<br>
				<% c_array = Turma.all.map { |c| [c.nome, c.id] } %>
				<%= f.select(:turma_id, options_for_select(c_array),{prompt: 'Selecione a turma: '}, {class: "form-control"} ) %>

			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :status_matricula %>
				<br>
				<%= f.select(:status_matricula, options_for_select([['Aberta'], ['Concluida'],['Encerrada']]), {}, {class: "form-control"})%>
			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :data_inicio_matricula%>
				<%= f.date_select :data_inicio_matricula,:order => [:day, :month, :year], class: "form-control"  %>

			</div>
		</div>

		<h1>Contrato</h1>
		
		<div class="form-group">
			<div class="field">
				<%= f.label :data_inicio_contrato %>
				<br>
				<%= f.date_select :data_inicio_contrato,:order => [:day, :month, :year], class: "form-control"  %>
			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :data_fim_contrato %>
				<br>

				<%= f.date_select :data_fim_contrato , :order => [:day, :month, :year], default: { day: Time.now.day, month:'12', year: Time.now.year}, class: "form-control"  %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="field">
				<%= f.label :dia_vencimento%>
				<%= f.select :dia_vencimento,options_for_select((1..28).step(1).to_a.map{|s| ["#{s}", s]}), {}, class: "form-control"  %>

			</div>
		</div>

		<div class="form-group">
			<div class="field">
				<%= f.label :status_contrato %>
				<br>
				<%= f.select(:status_contrato, options_for_select([['Aberta'], ['Concluida'],['Encerrada']]), {}, {class: "form-control"})%>
			</div>
		</div>
		<div class="form-group">
			<div class="actions">
				<%= f.submit %>
			</div>
		</div>

		<% end %>
	</div>
</div>
